<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textId"
        android:layout_below="@+id/textId"
        android:layout_marginTop="42dp"
        android:text="Pw : " />

    <TextView
        android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="76dp"
        android:text="Id : " />

    <EditText
        android:id="@+id/memberId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textId"
        android:layout_alignBottom="@+id/textId"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/textId"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/memberPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textPw"
        android:layout_alignBottom="@+id/textPw"
        android:layout_alignLeft="@+id/memberId"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/memberId"
        android:layout_below="@+id/memberPw"
        android:layout_marginTop="30dp"
        android:text="LogIn" />

    <CheckBox
        android:id="@+id/autoLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnLogIn"
        android:layout_alignLeft="@+id/textPw"
        android:text="자동로그인" />

</RelativeLayout>
